<resources>
    <style name="YandexToDoApplicationTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="green">@color/green</item>
        <item name="red">@color/red</item>
        <item name="blue">@color/blue</item>
        <item name="gray">@color/gray</item>
        <item name="white">@color/white</item>

        <!-- Accent colors -->
        <item name="colorPrimary">@color/lt_back_primary</item>
        <item name="colorOnPrimary">@color/lt_label_primary</item>

        <item name="colorSecondary">@color/lt_back_secondary</item>
        <item name="colorOnSecondary">@color/lt_label_secondary</item>

        <item name="colorTertiary">@color/lt_back_secondary</item>
        <item name="colorOnTertiary">@color/lt_label_tertiary</item>

        <!-- Neutral colors -->
        <item name="colorSurface">@color/lt_back_primary</item>
        <item name="colorOnSurface">@color/lt_label_primary</item>

        <item name="colorOutline">@color/lt_label_tertiary</item>
        <item name="colorOutlineVariant">@color/lt_support_separator</item>

        <!-- Decoration colors -->
            <!-- System UI bar background -->
            <item name="colorPrimaryDark">@color/lt_back_primary</item>

            <!-- FABs & Switches main color -->
            <item name="colorAccent">@color/blue</item>

            <!-- Elevation custom attribute color -->
            <item name="colorElevated">@color/lt_back_elevated</item>

            <!-- Overlay custom attribute color -->
            <item name="colorOverlay">@color/lt_support_overlay</item>

        <!-- Theme settings -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/YandexToDoApplicationTheme.BottomSheetDialog</item>
    </style>

    <attr name="green" format="color" />
    <attr name="red" format="color" />
    <attr name="blue" format="color" />
    <attr name="white" format="color" />
    <attr name="gray" format="color" />
    <attr name="colorElevated" format="color" />
    <attr name="colorOverlay" format="color" />
</resources>