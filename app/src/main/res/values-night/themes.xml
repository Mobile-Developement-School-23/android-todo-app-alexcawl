<resources>
    <style name="YandexToDoApplicationTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="green">@color/green</item>
        <item name="red">@color/red</item>
        <item name="blue">@color/blue</item>
        <item name="gray">@color/gray</item>
        <item name="white">@color/white</item>

        <!-- Accent colors -->
        <item name="colorPrimary">@color/dt_back_primary</item>
        <item name="colorOnPrimary">@color/dt_label_primary</item>

        <item name="colorSecondary">@color/dt_back_secondary</item>
        <item name="colorOnSecondary">@color/dt_label_secondary</item>

        <item name="colorTertiary">@color/dt_back_secondary</item>
        <item name="colorOnTertiary">@color/dt_label_tertiary</item>

        <!-- Neutral colors -->
        <item name="colorSurface">@color/dt_back_primary</item>
        <item name="colorOnSurface">@color/dt_label_primary</item>

        <item name="colorOutline">@color/dt_label_tertiary</item>
        <item name="colorOutlineVariant">@color/dt_support_separator</item>

        <!-- Decoration colors -->
        <!-- System UI bar background -->
        <item name="colorPrimaryDark">@color/dt_back_primary</item>

        <!-- FABs & Switches main color -->
        <item name="colorAccent">@color/blue</item>

        <!-- Elevation custom attribute color -->
        <item name="colorElevated">@color/dt_back_elevated</item>

        <!-- Overlay custom attribute color -->
        <item name="colorOverlay">@color/dt_support_overlay</item>

        <!-- Theme settings -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <attr name="green" format="reference|color" />
    <attr name="red" format="reference|color" />
    <attr name="blue" format="reference|color" />
    <attr name="white" format="reference|color" />
    <attr name="colorElevated" format="color" />
    <attr name="colorOverlay" format="color" />
</resources>