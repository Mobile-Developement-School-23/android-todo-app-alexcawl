<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_corners"
    android:backgroundTint="?attr/containerColor"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/task_deadline_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/task_deadline_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:text="@string/deadline"
            android:textColor="?attr/textSecondaryColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_edit_calendar_24"
            app:drawableTint="?attr/interactionColor" />

        <TextView
            android:id="@+id/task_deadline_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="1"
            android:textColor="?attr/textPrimaryColor"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <CalendarView
        android:id="@+id/task_deadline_calendarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true" />
</LinearLayout>


