<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/containerColor"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/task_checkbox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_rounded_corners"
        android:backgroundTint="?attr/containerColor"
        android:buttonTint="?attr/successColor"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:textColor="?attr/textPrimaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textColor="?attr/textSecondaryColor"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"
            android:gravity="start|center_vertical"
            android:textStyle="italic"
            app:drawableStartCompat="@drawable/baseline_calendar_month_24"
            app:drawableTint="?attr/interactionColor" />
    </LinearLayout>

</LinearLayout>

